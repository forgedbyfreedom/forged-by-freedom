name: ğŸ” Inspect Pinecone + OpenAI Contents

on:
  workflow_dispatch:

jobs:
  inspect:
    runs-on: ubuntu-latest
    env:
      OPENAI_API_KEY: ${{ secrets.OPENAI_API_KEY }}
      PINECONE_API_KEY: ${{ secrets.PINECONE_API_KEY }}
      PINECONE_INDEX_NAME: forged-freedom-ai

    steps:
      - name: ğŸ§­ Checkout repo
        uses: actions/checkout@v4

      - name: ğŸ Setup Python
        uses: actions/setup-python@v5
        with:
          python-version: "3.11"

      - name: ğŸ“¦ Full Clean Install of Dependencies
        run: |
    
    echo "ğŸ§¹ Cleaning environment..."
    # Remove any cached or preinstalled Pinecone packages
      pip uninstall -y pinecone pinecone-client || true
      pip cache purge || true

    echo "ğŸ“¦ Installing clean dependencies..."
      python3 -m pip install --upgrade pip
      pip install --no-cache-dir pinecone openai python-dotenv tqdm flask flask-cors requests tiktoken numpy

    echo "âœ… Verifying Pinecone SDK version..."
      python3 -c "import pinecone; print('âœ… Pinecone SDK version:', pinecone.__version__)"


      - name: ğŸ” Run inspection
        run: python backend/inspect_pinecone_contents.py

import { fetch } from 'wix-fetch';

export async function askOpenAI(message) {
  const response = await fetch("https://api.openai.com/v1/chat/completions", {
    method: "POST",
    headers: {
      "Authorization": "Bearer sk-YOUR-OPENAI-KEY",
      "Content-Type": "application/json"
    },
    body: JSON.stringify({
      model: "gpt-4o-mini",
      messages: [
        {
          role: "system",
          content: `
            You are Coach Bryan â€” a professional AI fitness and nutrition coach.
            You answer in a motivating tone, explain the science behind each answer,
            reference relevant podcast episodes when appropriate, and always end with
            a short encouragement on discipline and consistency.
          `
        },
        { role: "user", content: message }
      ]
    })
  });

  const data = await response.json();
  return data.choices[0].message.content;
}

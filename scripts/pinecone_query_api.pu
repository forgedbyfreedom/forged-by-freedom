#!/usr/bin/env python3
"""
pinecone_query_api.py
──────────────────────
Live API that allows Wix frontend to query Pinecone index directly.

Endpoints:
  POST /query  → accepts JSON { "query": "string", "top_k": 5 }
"""

from flask import Flask, request, jsonify
from flask_cors import CORS
import os
from openai import OpenAI
from pinecone import Pinecone

# Initialize app
app = Flask(__name__)
CORS(app)

# Load API keys from GitHub secrets (set in workflow env)
OPENROUTER_KEY = os.getenv("OPENROUTER_API_KEY")
PINECONE_KEY = os.getenv("PINECONE_API_KEY")
INDEX_NAME = os.getenv("PINECONE_INDEX_NAME", "forged-freedom-ai")

# Initialize clients
client = OpenAI(api_key=OPENROUTER_KEY, base_url="https://openrouter.ai/api/v1")
pc = Pinecone(api_key=PINECONE_KEY)
index = pc.Index(INDEX_NAME)

@app.route("/")
def home():
    return jsonify({"status": "ok", "message": "Forged by Freedom API online"})

@app.route("/query", methods=["POST"])
def query_pinecone():
    """Accepts user query → embeds → searches Pinecone → returns metadata."""
    try:
        data = request.get_json(force=True)
        query = data.get("query", "").strip()
        top_k = int(data.get("top_k", 5))

        if not query:
            return jsonify({"error": "Missing query"}), 400

        # Step 1️⃣: Embed query using OpenRouter
        embed_resp = client.embeddings.create(
            model="text-embedding-3-small",
            input=query
        )
        query_vector = embed_resp.data[0].embedding

        # Step 2️⃣: Search Pinecone
        results = index.query(
            vector=query_vector,
            top_k=top_k,
            include_metadata=True
        )

        # Step 3️⃣: Return matches and metadata
        matches = [
            {
                "score": m["score"],
                "source": m["metadata"].get("source", "Unknown"),
                "text": m["metadata"].get("text", "")[:1000]
            }
            for m in results.get("matches", [])
        ]

        return jsonify({
            "query": query,
            "results": matches,
            "count": len(matches)
        })

    except Exception as e:
        return jsonify({"error": str(e)}), 500


if __name__ == "__main__":
    port = int(os.getenv("PORT", 8080))
    app.run(host="0.0.0.0", port=port, debug=True)
